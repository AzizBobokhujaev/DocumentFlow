@using Microsoft.AspNetCore.Mvc.TagHelpers
@model Api.Models.ViewModels.OrdersListViewModel
<div class="d-flex justify-content-center">
    <div style="width: 95%">
    <h1 class="text-center">Orders</h1>


    <div class="d-flex justify-content-between mt-4 mb-3">
        <div class="w-50">
            <form asp-controller="Order" asp-action="Index" method="get">
                <div class="d-flex ">
                    <div class="form-group ">
                        <input type="text" class="form-control" id="searchString" name="searchString" placeholder="Ҷустуҷу" value="@Model.SearchString"/>
                    </div>
                    <div class="ms-2">
                        <button type="submit" class="btn btn-primary">Ҷустуҷу</button>
                    </div>
                </div>
            </form>
        </div>
        <div class="w-25 d-flex justify-content-end">
            <button type="button" class="btn btn-success"> <a asp-action="Create" class="text-decoration-none text-white">Create New</a></button>
        </div>
    </div>

    @if (Model.Orders.Any())
    {
        <table class="table ">
            <thead>
            <tr class="border border-dark-subtle text-center bg-danger bg-opacity-50">
                <th class="border border-dark-subtle text-center" style="width: 8%">Document Number</th>
                <th class="border border-dark-subtle text-center" style="width: 8%">Title</th>
                <th class="border border-dark-subtle text-center" style="width: 8%">Decree File</th>
                <th class="border border-dark-subtle text-center" style="width: 8%">Execution File</th>
                <th class="border border-dark-subtle text-center" style="width: 8%">Created At</th>
                <th class="border border-dark-subtle text-center" style="width: 8%">Status</th>
                <th class="border border-dark-subtle text-center" style="width: 8%">Deadline</th>
                <th class="border border-dark-subtle  text-center" style="width: 28%">Users</th>
                <th class="border border-dark-subtle text-center" style="width: 8%">Edit</th>
                <th class="border border-dark-subtle text-center" style="width: 8%">Delete</th>

            </tr>
            </thead>
            <tbody class="">
            @foreach (var order in Model.Orders)
            {
                <tr>
                    <td class="border border-dark-subtle" style="width: 8%">@order.DocumentNumber</td>
                    <td class="border border-dark-subtle" style="width: 8%">@order.Title</td>
                    <td class="border border-dark-subtle" style="width: 8%">
                        @if (!string.IsNullOrEmpty(order.DecreeFilePath))
                        {
                            <a class="text-decoration-none" href="@Url.Content("/files/" + order.DocumentNumber + "-" + order.CreatedAt.ToString("dd/MM/yy/HH/mm/ss") + ".pdf")" target="_blank">@order.DocumentNumber</a>
                        }
                    </td>
                    <td class="border border-dark-subtle" style="width: 8%">
                        @if (!string.IsNullOrEmpty(order.ExecutionFilePath))
                        {
                            <a class="text-decoration-none" href="@Url.Content($"/response-files/{order.DocumentNumber}-{order.ExecutionFileCreatedAt:dd/MM/yy/HH/mm/ss}.pdf")" target="_blank">@order.DocumentNumber</a>
                        }
                        else
                        {
                            <a class="btn btn-info" href="~/Order/SetExecutionFile?id=@order.Id">Добавить ответ</a>
                        }
                    </td>
                    <td class="border border-dark-subtle" style="width: 8%">@order.CreatedAt</td>
                    <td class="border border-dark-subtle" style="width: 8%">@order.Status.Name</td>
                    <td class="border border-dark-subtle" style="width: 8%">@order.Deadline.ToString("dd/MM/yyyy")</td>
                    <td class="border border-dark-subtle" style="width: 28%">
                        @foreach (var user in order.Users)
                        {
                            <span>@user.UserName,</span>
                        }
                    </td>
                    <td class="border border-dark-subtle" style="width: 8%">
                        <a class="btn btn-info" href="~/Order/Edit?id=@order.Id">Изменить</a>
                    </td>
                    <td class="border border-dark-subtle" style="width: 8%">
                        <a class="btn btn-danger" href="~/Order/Delete?id=@order.Id">Удалить</a>
                    </td>
                </tr>
            }
            </tbody>
        </table>
        <nav aria-label="Books navigation">
            <ul class="pagination">
                @if (Model.PagingInfo.CurrentPage > 1)
                {
                    <li class="page-item">
                        <a class="page-link" href="@Url.Action("Index", new { pageNumber = Model.PagingInfo.CurrentPage - 1, searchString = Model.SearchString })">Previous</a>
                    </li>
                }

                @for (int i = 1; i <= Model.PagingInfo.TotalPages; i++)
                {
                    <li class="page-item @(i == Model.PagingInfo.CurrentPage ? "active" : "")">
                        <a class="page-link" href="@Url.Action("Index", new { pageNumber = i, searchString = Model.SearchString })">@i</a>
                    </li>
                }

                @if (Model.PagingInfo.CurrentPage < Model.PagingInfo.TotalPages)
                {
                    <li class="page-item">
                        <a class="page-link" href="@Url.Action("Index", new { pageNumber = Model.PagingInfo.CurrentPage + 1, searchString = Model.SearchString })">Next</a>
                    </li>
                }
            </ul>
        </nav>
    }
    else
    {
        <p>No documrnts found.</p>
    }
    </div>
</div>