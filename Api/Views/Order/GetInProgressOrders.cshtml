@using Microsoft.AspNetCore.Mvc.TagHelpers
@model Api.Models.ViewModels.OrdersListViewModel
<div class="d-flex justify-content-center">
    <div style="width: 95%">
    <h1 class="text-center">Дар ҳолати иҷроиш</h1>
        <div class="d-flex justify-content-between mt-4 mb-3">
        <div class="w-50">
            <form asp-controller="Order" asp-action="GetInProgressOrders" method="get">
                <div class="d-flex ">
                    <div class="form-group ">
                        <input type="text" class="form-control" id="searchString" name="searchString" placeholder="Ҷустуҷӯ" value="@Model.SearchString"/>
                    </div>
                    <div class="ms-2">
                        <button type="submit" class="btn btn-primary">Ҷустуҷӯ</button>
                    </div>
                </div>
            </form>
        </div>
       
    </div>

    @if (Model.Orders.Any())
    {
        <table class="table ">
            <thead>
            <tr class="border border-dark-subtle text-center bg-danger bg-opacity-50">
                <th class="border border-dark-subtle text-center" style="width: 8%">№</th>
                <th class="border border-dark-subtle text-center" style="width: 8%">Мавзуъ</th>
                <th class="border border-dark-subtle text-center" style="width: 8%">Фармон</th>
                <th class="border border-dark-subtle text-center" style="width: 8%">Ҷавоб</th>
                <th class="border border-dark-subtle text-center" style="width: 8%">Таърих</th>
                <th class="border border-dark-subtle text-center" style="width: 8%">Иҷроиш</th>
                <th class="border border-dark-subtle text-center" style="width: 8%">Муҳлат</th>
                <th class="border border-dark-subtle  text-center" style="width: 28%">Иҷрокунанда</th>
                <th class="border border-dark-subtle text-center" style="width: 8%">Тағирдиҳӣ</th>
                <th class="border border-dark-subtle text-center" style="width: 8%">Несткунӣ</th>

            </tr>
            </thead>
            <tbody class="">
            @foreach (var order in Model.Orders)
            {
                <tr>
                    <td class="border border-dark-subtle" style="width: 8%">@order.DocumentNumber</td>
                    <td class="border border-dark-subtle" style="width: 8%">@order.Title</td>
                    <td class="border border-dark-subtle" style="width: 8%">
                        @if (!string.IsNullOrEmpty(order.DecreeFilePath))
                        {
                            <a class="text-decoration-none" href="@Url.Content("/files/" + order.DecreeName + "-" + order.CreatedAt.ToString("dd/MM/yy/HH/mm/ss") + ".pdf")" target="_blank">@order.DecreeName</a>
                        }
                    </td>
                    <td class="border border-dark-subtle" style="width: 8%">
                        @if (!string.IsNullOrEmpty(order.ExecutionFilePath))
                        {
                            <a class="text-decoration-none" href="@Url.Content($"/response-files/{order.ExecutionDocumentName}-{order.ExecutionFileCreatedAt:dd/MM/yy/HH/mm/ss}.pdf")" target="_blank">@order.ExecutionDocumentName</a>
                        }
                        else
                        {
                            <a class="btn btn-info" href="~/Order/SetExecutionFile?id=@order.Id">Ҷавоб</a>
                        }
                    </td>
                    <td class="border border-dark-subtle" style="width: 8%">@order.CreatedAt</td>
                    <td class="border border-dark-subtle" style="width: 8%">@order.Status.Name</td>
                    @if (DateTime.Now >= order.Deadline)
                    {
                        <td class="border border-dark-subtle" style="width: 8%; color: red">@order.Deadline.ToString("dd/MM/yyyy")</td>
                    }
                    else
                    {
                        <td class="border border-dark-subtle" style="width: 8%; color: lawngreen">@order.Deadline.ToString("dd/MM/yyyy")</td>
                    }
                    <td class="border border-dark-subtle" style="width: 28%">
                        @foreach (var user in order.Users)
                        {
                            <span>@user.UserName,</span>
                        }
                    </td>
                    <td class="border border-dark-subtle" style="width: 8%">
                        <a class="btn btn-info" href="~/Order/Edit?id=@order.Id">Тағирдиҳӣ</a>
                    </td>
                    <td class="border border-dark-subtle" style="width: 8%">
                        <a class="btn btn-danger" href="~/Order/Delete?id=@order.Id">Удалить</a>
                    </td>
                </tr>
            }
            </tbody>
        </table>
        <nav aria-label="Books navigation">
            <ul class="pagination">
                @if (Model.PagingInfo.CurrentPage > 1)
                {
                    <li class="page-item">
                        <a class="page-link" href="@Url.Action("GetInProgressOrders", new { pageNumber = Model.PagingInfo.CurrentPage - 1, searchString = Model.SearchString })">Ба ақиб</a>
                    </li>
                }

                @for (int i = 1; i <= Model.PagingInfo.TotalPages; i++)
                {
                    <li class="page-item @(i == Model.PagingInfo.CurrentPage ? "active" : "")">
                        <a class="page-link" href="@Url.Action("GetInProgressOrders", new { pageNumber = i, searchString = Model.SearchString })">@i</a>
                    </li>
                }

                @if (Model.PagingInfo.CurrentPage < Model.PagingInfo.TotalPages)
                {
                    <li class="page-item">
                        <a class="page-link" href="@Url.Action("GetInProgressOrders", new { pageNumber = Model.PagingInfo.CurrentPage + 1, searchString = Model.SearchString })">Ба пеш</a>
                    </li>
                }
            </ul>
        </nav>
    }
    else
    {
        <p>Ҳуҷҷат вуҷуд нест</p>
    }
    </div>
</div>