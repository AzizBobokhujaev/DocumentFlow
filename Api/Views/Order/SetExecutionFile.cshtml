@model Api.Models.ViewModels.SetExecutionFileVm
<div class="card-body" style="border: 1px solid #fff; border-radius: 10px;">
    <form method="post" asp-action="SetExecutionFile" asp-controller="Order" enctype="multipart/form-data">
        <div asp-validation-summary="All" class="text-danger"></div>
        <input type="hidden" asp-for="Id" /> 
        <div class="d-flex w-50">
        <div class="form-group w-50">
            <label asp-for="ExecutionDocumentName"></label>
            <input asp-for="ExecutionDocumentName" class="form-control" />
            <span asp-validation-for="ExecutionDocumentName" class="text-danger"></span>
        </div>
        <div class="form-group w-50">
            <label asp-for="ExecutionFile"></label>
            <input asp-for="ExecutionFile" type="file" class="form-control" />
            <span asp-validation-for="ExecutionFile" class="text-danger"></span>
        </div>
        </div>
        <div class="form-group mt-3">
            <input type="submit" value="Сабт" class="btn btn-success" style=" padding-left: 20px; padding-right: 20px;"/>
            <a asp-action="Index" asp-controller="Order" class="btn btn-primary">Ба ақиб</a>
        </div>
    </form>
</div>