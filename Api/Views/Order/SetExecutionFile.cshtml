@model Api.Models.ViewModels.SetExecutionFileVm
<div class="card-body" style="border: 1px solid #fff; border-radius: 10px;">
    <form method="post" asp-action="SetExecutionFile" asp-controller="Order" enctype="multipart/form-data">
        <div asp-validation-summary="All" class="text-danger"></div>
        <input type="hidden" asp-for="Id" /> 
        <div class="form-group">
            <label asp-for="ExecutionFile"></label>
            <input asp-for="ExecutionFile" type="file" class="form-control-file" />
            <span asp-validation-for="ExecutionFile" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input type="submit" value="Сохранить" class="btn btn-success"/>
            <a asp-action="Index" asp-controller="Order" class="btn btn-primary">Назад</a>
        </div>
    </form>
</div>