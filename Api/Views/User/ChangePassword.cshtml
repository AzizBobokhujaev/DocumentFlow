@model Api.Models.ViewModels.ChangePasswordVm

@if (User.IsInRole("SuperAdmin"))
{
    <h1 class="text-white">Изменить</h1>

    <div class="good">
        <div class="card-body" style="border: 1px solid #fff; border-radius: 10px;">
        
            <form method="post" asp-action="ChangePassword" asp-controller="User" enctype="multipart/form-data">
                <div asp-validation-summary="All" class="text-danger"></div>
                <input type="hidden" asp-for="Id" />    
                <div class="form-group">
                    <label asp-for="NewPassword" class="control-label text-white"></label>
                    <input asp-for="NewPassword" class="form-control" />
                    <span asp-validation-for="NewPassword" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Сохранить" class="btn btn-success" />
                    <a asp-action="ChangePassword" asp-controller="User" class="btn btn-primary">Назад</a>
                </div>
            </form>
       
        </div>
    </div>
    <style>
    .good{
        width:800px;
    }
    </style>
}