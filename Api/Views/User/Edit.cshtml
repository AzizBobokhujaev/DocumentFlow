@model Api.Models.ViewModels.EditUserVm

@if (User.IsInRole("SuperAdmin"))
{
    <div class="good">
        <div class="card-body" style="border: 1px solid #fff; border-radius: 10px;">
            <form method="post" asp-action="Edit" asp-controller="User" enctype="multipart/form-data">
                <div asp-validation-summary="All" class="text-danger"></div>
                <input type="hidden" asp-for="Id" />    
                <div class="form-group w-50">
                    <label asp-for="UserName" class="control-label text-warning"></label>
                    <input asp-for="UserName" class="form-control" />
                    <span asp-validation-for="UserName" class="text-danger"></span>
                </div>
                <div class="form-group mt-3 w-50">
                    <label asp-for="PhoneNumber" class="col-md-4 text-warning"></label>
                    <input asp-for="PhoneNumber" class="col-md-3 form-control" type="number" placeholder="+992987654321" style="border: 1px solid black;"/>
                    <span asp-validation-for="PhoneNumber" />
                </div>
                <div class="form-group mt-4">
                    <input type="submit" value="Сабт" class="btn btn-success" />
                    <a asp-action="Edit" asp-controller="User" class="btn btn-primary">Ба ақиб</a>
                </div>
            </form>
       
        </div>
    </div>
    <style>
    .good{
        width:800px;
    }
</style>
}